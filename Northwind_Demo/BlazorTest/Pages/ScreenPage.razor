@page "/screen/{controller}"
@using BusinessFramework.Contracts.GuiSettings.Json
@using Newtonsoft.Json
@inject HttpClient Http

@if (screenSettings == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <h2>@screenSettings.Title</h2>

    @*<p class="pb-2 pt-2">
        @screenSettings.

        The DevExpress Data Grid for Blazor allows you to display and manage data via a tabular (rows/columns) UI metaphor.
        This page uses our Blazor Data Grid component to display weather forecast values.
    </p>*@
}

@code {

    [Parameter]
    public string Controller { get; set; }

    private Screen screenSettings;

    /// <inheritdoc />
    protected override async Task OnParametersSetAsync()
    {
        var json = await Http.GetStringAsync($"api/{Controller}");
        screenSettings = JsonConvert.DeserializeObject<Screen>(json, GuiSettingsJsonSettings.ReadScreenSettings);
    }
}